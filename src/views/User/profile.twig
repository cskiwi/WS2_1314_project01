{% extends 'layout.twig' %}

{% set pageTitle = 'Profile' %}
{% set subTitle = 'Profile' %}

{% block content %}
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">{{ 'Info' |trans }}</div>
            <div class="panel-body">
                <ul>
                    <li>Username: {{ profile.username }}</li>
                    <li><a href="{{ path('messages.compose', {'to' :  profile.username} ) }}">{{ 'Contact'|trans }}</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">{{ 'Location' | trans }}</div>
            <div class="panel-body">
                <ul>
                    <li>Adress1 : {{ profile.address1 }}</li>
                    <li>Adress2: {{ profile.address2 }}</li>
                    <li>City / Town: {{ profile.cityTown }}</li>
                    <li>State / Province / Region: {{ profile.stateProvinceRegion }}</li>
                    <li>Zip / Postal: {{ profile.zipPostal }}</li>
                    <li>Country: {{ profile.country }}</li>
                </ul>
            </div>
        </div>
    </div>

    <h4>Tools by user</h4>
    <div class="col-lg-12">
        <div class="row">
            {% if tools %}
                {% include 'include/toollist.twig'%}
            {% else %}
                <div class="col-md-4">
                    <p> No tools found!</p>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}