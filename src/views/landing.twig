{% extends 'layout.twig' %}

{% set pageTitle = 'Welcome' |trans %}
{% set subTitle = 'Welcome' |trans %}

{% block content %}
    <div class="col-lg-9">
        <div class="panel panel-default">
            <div class="panel-heading">{{ 'About this' |trans }}</div>
            <div class="panel-body">
               <p>Welcome, <br />
               Here at <strong>{{ 'name'|trans }}</strong> we try to connect the people with tools and give them an oppertunity to share them with others who might need it for one day</p>

                <p>at this moment we have <strong>{{ toolCount }}</strong> tools to offer for you!</p>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="panel panel-default">
            <div class="panel-heading">{{ 'Language' |trans }}</div>
            <div class="panel-body">
                {{ 'Current language'|trans }}: <strong>{{ 'locale_lang'|trans}}</strong>
            </div>
        </div>
    </div>


{% endblock %}

