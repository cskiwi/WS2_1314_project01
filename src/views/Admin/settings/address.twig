<div class="panel panel-default">
    <div class="panel-heading">{{ 'Profile settings' |trans }}</div>
    <div class="panel-body">
        <form action="{{ path('admin.settings', {type:'address'}) }}" method="post" {{ form_enctype(form) }} novalidate="novalidate">
            <!-- Token -->
            {{ form_widget(form._token) }}

            <div class="form-group{% if not form.name.vars.valid %}form-group has-error{% endif %}">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                {% if not form.name.vars.valid %}
                    {% for error in form.name.vars.errors %}
                        <small>{{ error.message|trans|capitalize }}</small>
                    {% endfor %}
                {% endif %}
            </div>

            <div class="form-group{% if not form.address1.vars.valid %}form-group has-error{% endif %}">
                {{ form_label(form.address1) }}
                {{ form_widget(form.address1) }}
                {% if not form.address1.vars.valid %}
                    {% for error in form.address1.vars.errors %}
                        <small>{{ error.message|trans|capitalize }}</small>
                    {% endfor %}
                {% endif %}
            </div>

            <div class="form-group{% if not form.address2.vars.valid %}form-group has-error{% endif %}">
                {{ form_label(form.address2) }}
                {{ form_widget(form.address2) }}
                {% if not form.address2.vars.valid %}
                    {% for error in form.address2.vars.errors %}
                        <small>{{ error.message|trans|capitalize }}</small>
                    {% endfor %}
                {% endif %}
            </div>

            <div class="form-group{% if not form.cityTown.vars.valid %}form-group has-error{% endif %}">
                {{ form_label(form.cityTown) }}
                {{ form_widget(form.cityTown) }}
                {% if not form.cityTown.vars.valid %}
                    {% for error in form.cityTown.vars.errors %}
                        <small>{{ error.message|trans|capitalize }}</small>
                    {% endfor %}
                {% endif %}
            </div>

            <div class="form-group{% if not form.stateProvinceRegion.vars.valid %}form-group has-error{% endif %}">
                {{ form_label(form.stateProvinceRegion) }}
                {{ form_widget(form.stateProvinceRegion) }}
                {% if not form.stateProvinceRegion.vars.valid %}
                    {% for error in form.stateProvinceRegion.vars.errors %}
