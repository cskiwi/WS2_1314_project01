                    {% for error in form.country.vars.errors %}
                        <small>{{ error.message|trans|capitalize }}</small>
                    {% endfor %}
                {% endif %}
            </div>

            <!-- Button -->
            <div class="form-group">
                <button id="submit" name="submit" class="btn btn-info">{{ 'Save' | trans }}</button>
            </div>
        </form>
    </div>
</div>
