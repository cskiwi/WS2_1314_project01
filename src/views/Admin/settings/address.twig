                    {% endfor %}
                {% endif %}
            </div>

            <div class="form-group{% if not form.zipPostal.vars.valid %}form-group has-error{% endif %}">
                {{ form_label(form.zipPostal) }}
                {{ form_widget(form.zipPostal) }}
                {% if not form.zipPostal.vars.valid %}
                    {% for error in form.zipPostal.vars.errors %}
