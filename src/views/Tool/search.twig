{% extends 'layout.twig' %}

{% set pageTitle = 'Search'|trans %}
{% set subTitle = 'Search'|trans %}

{% block content %}
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">{{ 'Search result' |trans }}</div>
            <div class="panel-body">
                <div class="row">

                    {% if search_result %}
                        {% for result in search_result  %}
                            <div class="col-md-3 search-item">
                                <div class="thumbnail">
                                    {% if result.images is defined %}
                                        <img src="{{ app.request.baseUrl }}{{ app['rmt.base_url'] }}/{{ result.id}}/{{ result.images[0] }}" alt="{{ result.title|striptags }}">
                                    {% else %}
                                        <img src="http://placehold.it/100x100" alt="{{ result.title|striptags }}">
                                    {% endif %}
                                    <div class="caption">
                                        <h3>{{ result.title |striptags}}</h3>
                                        <p>Status: {{ result.status  }}</p>
                                        <p class="text-center"><a href="{{ path('tool.detail', { 'toolId':  result.id }) }}" class="btn btn-default" role="button">Details</a>
                                            {% if app.session.get('user') %}
                                                {% if app.session.get('user')['id'] != result.user_id %}
                                                    <a href="{{ path('reservations.make', {'id' :  result.id} ) }}" role="button" class="btn btn-primary">Rent!</a>
                                                {% endif %}
                                            {% else %}
                                                <a href="{{ path('auth.login') }}">Login</a> and rent this tool!
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="col-md-4">
                            <p> No tools found!</p>
                        </div>
                    {% endif %}
                </div>

            </div>
        </div>

        {% set prevPage = curPage - 1 %}
        {% set nextPage = curPage + 1 %}
        {% set currentPath = app.request.getBaseUrl ~ app.request.getPathInfo ~ '?q='~ searchQuerry ~ '&includeOwn=' ~ includeOwn  ~ '&zip=' ~ zip %}

        {% if numPages > 1 %}
            <div class="text-center">
                <ul class="pagination pagination-sm">
                    {% if curPage > 1 %}
                        <li class="previousPage"><a href="{{ currentPath }}&p={{ prevPage }}" data-p="{{ prevPage }}">< Previous</a></li>
                    {% else %}
                        <li class="previousPage disabled"><span>< Previous</span></li>
                    {% endif %}
                    {% for page in pagination %}
                        <li {% if page == curPage %} class="active"{% endif %}{% if page == '...' %} class="disabled"{% endif %}>
                            {% if page == curPage %}
                                <span>{{ page }}</span>
                            {% elseif page == '...' %}
                                <span>â€¦</span>
                            {% else %}
                                <a href="{{ currentPath }}&p={{ page }}" data-p="{{ page }}">{{ page }}</a>
                            {% endif %}
                        </li>
                    {% endfor %}
                    {% if curPage < numPages %}
                        <li class="nextPage"><a href="{{ currentPath }}&p={{ nextPage }}" data-p="{{ nextPage }}">Next ></a></li>
                    {% else %}
                        <li class="nextPage disabled"><span>Next ></span></li>
                    {% endif %}
                </ul>
                <p class="text-muted">
                    <em>{{ numItems }} items</em>
                </p>
            </div>
        {% endif %}
    </div>
{% endblock %}


{% block searchForm %}

    <a data-toggle="collapse" data-parent="#accordion" href="#filter" role="button" class="btn btn-default search-filter">Filters</a>

    <div id="filter" class="panel-collapse collapse {% if includeOwn or zip %} in {% endif %}">
        <div class="form-group search-filter">
            <label for="zip">Zipcode</label>
            <input type="text" class="form-control" id="zip" {% if zip %}value="{{ zip }}" {% endif %} placeholder="Enter zipcode">
        </div>

        <div class="checkbox search-filter">
            <label>
                <input type="checkbox" name="includeOwn"  {% if includeOwn == 'on' %}checked="checked"{% endif %}> Show own tools?
            </label>
        </div>

        <div class="search-filter">
            <button class="btn btn-default" type="submit">
                <i class="fa fa-search"> Search</i>
            </button>
        </div>
    </div>
{% endblock %}


