{% extends 'Mail/layout.twig' %}
{% set pageTitle = 'Reservation accepted' |trans%}
{% set subTitle = 'Reservation accepted' |trans %}

{% block content %}
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">{{ 'Reservation got accepted'|trans }}</div>
            <div class="panel-body">
                <p>Hi {{ user.name }}, <br/>
                We are happy to anounce your resrvation for <strong>{{ reservation.title }}</strong> got accepted for the period {{ reservation.start_date }} until {{ reservation.end_date }}</p>
            </div>
        </div>
    </div>
{% endblock %}